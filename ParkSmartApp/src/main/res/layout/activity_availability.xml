<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_orange_light"
    tools:context=".AvailabilityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/introAvailability"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="@string/howManyLotsAvailable"
                android:textColor="@color/colorRed"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/numberOfLotAvailable"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@drawable/parking_line" />

        <TextView
            android:id="@+id/Lot_1"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/parking_spot" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/parking_line" />

        <TextView
            android:id="@+id/Lot_2"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/parking_spot" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/parking_line" />

        <TextView
            android:id="@+id/Lot_3"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/parking_spot" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/parking_line" />

    </LinearLayout>

</RelativeLayout>

