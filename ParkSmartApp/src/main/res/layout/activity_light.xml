<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgwhite"
    tools:context=".LightActivity">

    <TextView
        android:id="@+id/lightHeading"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="@string/lightControl"
        android:textColor="@color/blackText"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textViewGate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lightHeading"
        android:layout_alignParentStart="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="32dp"
        android:text="@string/entryLight"
        android:textColor="@color/blackText"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewGate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="146dp"
        android:layout_marginBottom="259dp"
        android:text="@string/exitLight"
        android:textColor="@color/blackText"
        android:textSize="30sp" />

    <Button
        android:id="@+id/lightOn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="184dp"
        android:background="@color/green"
        android:text="@string/on" />

    <Button
        android:id="@+id/lightOn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="174dp"
        android:background="@color/green"
        android:text="@string/on" />

    <Button
        android:id="@+id/lightOff1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="86dp"
        android:background="@color/colorRed"
        android:text="@string/off" />

    <Button
        android:id="@+id/lightOff2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="174dp"
        android:background="@color/colorRed"
        android:text="@string/off" />

    <TextView
        android:id="@+id/entryGateStatusTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lightOn1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="84dp"
        android:text="@string/la"
        android:textColor="@color/colorRed"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/StatusLight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lightOn1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="84dp"
        android:textColor="@color/blackText"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/exitGateStatusTV"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="114dp"
        android:text="@string/la"
        android:textColor="@color/colorRed"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/StatusLight2"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="114dp"
        android:textColor="@color/blackText"
        android:textSize="15sp" />

</RelativeLayout>